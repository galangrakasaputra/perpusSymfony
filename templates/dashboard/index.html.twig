<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Library{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <script src="https://unpkg.com/react@16/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@16/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/babel-standalone@6.15.0/babel.min.js"></script>
    {% block stylesheets %}
        <link href="{{ asset('vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
        <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet">

        <!-- Custom styles for this template-->
        <link href="{{ asset('css/sb-admin-2.min.css') }}" rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <style>
        body, html {
            height: 100%; /* pastikan 100% tinggi */
            margin: 0;
        }
        .wrapper {
            display: flex;
            height: calc(100vh - 56px); /* total tinggi - tinggi navbar */
        }
        .sidebar {
            width: 250px;
            background: #343a40;
            color: white;
            flex-shrink: 0;
            padding-top: 1rem;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 0.75rem 1rem;
            display: block;
        }
        .sidebar a:hover {
            background: #495057;
        }
        .content {
            flex-grow: 1;
            padding: 2rem;
            background: #f8f9fa;
        }
    </style>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
            <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
            <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

            <!-- Core plugin JavaScript-->
            <script src="{{ asset('vendor/jquery-easing/jquery.easing.min.js') }}"></script>

            <!-- Custom scripts for all pages-->
            <script src="{{ asset('js/sb-admin-2.min.js') }}"></script>
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>
    {# Navbar full width #}
    {% include 'partial/navbar.html.twig' %}

    {# Wrapper jangan pakai container #}
    <div class="wrapper">
        {# Sidebar full tinggi #}
        {% include 'partial/sidebar.html.twig' %}

        {# Konten utama #}
        <div class="content flex-grow-1">
            {% block body %}
                <div class="container-fluid"> {# konten pakai container-fluid kalau mau ada padding #}
                    <h1>Dashboard</h1>
                    <p>Konten utama tampil di sini.</p>
                </div>
            {% endblock %}
        </div>
    </div>
</body>

</html>
